{
  "name": "user-management-api-tests",
  "version": "1.0.0",
  "description": "Playwright API tests for User Management API with JWT Authentication",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:ci": "playwright test --reporter=line,html,allure-playwright",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "allure:generate": "allure generate ./allure-results --clean",
    "allure:open": "allure open ./allure-report",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "keywords": [
    "playwright",
    "api-testing",
    "typescript",
    "jwt",
    "automation"
  ],
  "author": "Playwright Vietnam",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "allure-playwright": "^2.10.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

